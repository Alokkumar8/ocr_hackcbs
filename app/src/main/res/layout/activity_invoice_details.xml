<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InvoiceDetailsActivity">

    <TextView
        android:id="@+id/tv_serial_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Serial number:"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"/>

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date:"
        app:layout_constraintStart_toStartOf="@id/tv_serial_number"
        app:layout_constraintTop_toBottomOf="@+id/tv_serial_number"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"/>

    <TextView
        android:id="@+id/tv_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Other detail :"
        app:layout_constraintStart_toStartOf="@id/tv_serial_number"
        app:layout_constraintTop_toBottomOf="@+id/tv_date"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"/>
</androidx.constraintlayout.widget.ConstraintLayout>